<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/single_recycler3"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/model6"
        android:scaleType="centerCrop"
        android:padding="2dp"
        android:layout_margin="10dp"
        app:shapeAppearanceOverlay="@style/corner_style2"/>
    <TextView
        android:id="@+id/txt_invited_you"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="invited you "
        android:textColor="@color/white"
        android:background="@drawable/background1"
        android:drawableEnd="@drawable/ic_heart"
        android:layout_alignTop="@id/single_recycler3"
        android:layout_alignEnd="@id/single_recycler3"
        />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/single_recycler3"
        android:layout_alignBottom="@id/single_recycler3"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="23dp"
        android:text="zuchu"
        android:textColor="@color/white"
        android:textSize="25sp" />

</RelativeLayout>