<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >
    <TextView
        android:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invited"
        android:paddingHorizontal="5dp"
        android:textColor="@color/white"
        android:background="@drawable/background1"
        />
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/group_img1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/model"
            app:shapeAppearanceOverlay="@style/corner_style" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/group_img2"
            android:layout_alignStart="@id/group_img1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mod3"
            app:shapeAppearanceOverlay="@style/corner_style" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/group_img3"
            android:layout_alignStart="@id/group_img2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/model4"
            app:shapeAppearanceOverlay="@style/corner_style" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/group_img4"
            android:layout_alignStart="@id/group_img3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/model5"
            app:shapeAppearanceOverlay="@style/corner_style" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/group_img5"
            android:layout_alignStart="@id/group_img4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/model6"
            app:shapeAppearanceOverlay="@style/corner_style" />



    </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>