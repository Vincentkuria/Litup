<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/post_img"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/model6"
        android:scaleType="centerCrop"
        android:padding="2dp"
        android:layout_margin="10dp"
        app:shapeAppearanceOverlay="@style/corner_style2"/>

    <ImageView
        android:id="@+id/love_like"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@id/post_img"
        android:layout_alignBottom="@id/post_img"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_heart2"
        android:contentDescription="@string/description" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/love_liked"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@id/post_img"
        android:layout_alignBottom="@id/post_img"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_heart"
        android:contentDescription="@string/description" />

    <TextView
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/love_like"
        android:layout_alignStart="@id/love_like"
        android:layout_alignEnd="@id/love_like"
        android:layout_marginTop="-40dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="105,008"
        android:textAlignment="center"
        android:textColor="@color/white" />

</RelativeLayout>